<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/months.jpg"
    android:weightSum="1"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:id="@+id/imageView"
        android:layout_weight="0.54" />


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/spinner"
        style="@style/Animation.AppCompat.DropDownUp"
        android:accessibilityLiveRegion="@android:integer/config_mediumAnimTime"
        android:background="#700f0110"
        android:clickable="true"
        android:dropDownSelector="@android:color/background_light"
        android:dropDownWidth="@dimen/abc_text_size_subtitle_material_toolbar"
        android:focusableInTouchMode="false"
        android:spinnerMode="dropdown"
        android:nestedScrollingEnabled="true" />










</LinearLayout>
