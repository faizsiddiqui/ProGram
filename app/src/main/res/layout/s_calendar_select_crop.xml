<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorFlatRed"
        android:gravity="center"
        android:padding="@dimen/keyLine2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter soil details for precise results."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorWhite"
            android:gravity="center_horizontal"/>

        <Button
            android:id="@+id/calendar_soil_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="@dimen/keyLine2"
            android:background="@color/colorWhite"
            android:textColor="@color/colorSecondaryText"
            android:text="Soil test report"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/calendar_select_crop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:scrollbars="none"/>

</LinearLayout>