<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/cardView_outer_margin"
    android:layout_marginRight="@dimen/cardView_outer_margin"
    android:layout_marginTop="@dimen/cardView_outer_margin"
    android:padding="@dimen/keyLine1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/forumTopTitle"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/keyLine1"
            android:text="@string/exampleString"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/keyLine1"
            android:orientation="horizontal"
            android:layout_below="@+id/forumTopTitle">

            <ImageView
                android:id="@+id/forumIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/keyLine4"
                android:layout_marginStart="@dimen/keyLine4">

               <TextView
                    android:id="@+id/forumTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/exampleString"
                    android:textSize="@dimen/navigation_row_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/forumText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="@string/exampleString" />

             </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>

