<?xml version="1.0" encoding="utf-8"?>
<app.widgets.ScrimInsetsScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:scrollbarSize="@dimen/keyLine3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/keyLine3"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/location"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyLine1"
            android:text="Select State"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"/>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyLine2"
            card_view:cardBackgroundColor="@color/colorAccent"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp">

            <TextView
                android:id="@+id/location_present"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Fetching current state."
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"/>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/calendar_location_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyLine2"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            android:text="Change State"
            android:layout_gravity="center_horizontal|bottom" />

        <Button
            android:id="@+id/calendar_location_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyLine1"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            android:text="Continue"
            android:layout_gravity="center_horizontal|bottom" />

    </LinearLayout>

</app.widgets.ScrimInsetsScrollView>