<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:id="@+id/months_image"
        android:layout_gravity="center_vertical"
        android:scaleType="center"
        android:layout_weight="0.54"
        android:src="@drawable/crops"/>

    <Spinner
        android:id="@+id/crop_spinner"
        android:layout_marginTop="0dip"
        android:layout_marginBottom="20dip"
        android:spinnerMode="dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/india_crops"
        android:prompt="@string/crop_prompt"
        android:background="@android:drawable/btn_dropdown"/>

    <Button
        android:id="@+id/jumpbtn"
        android:text="Next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="jumpToPage"/>

    <FrameLayout android:id="@+id/listFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </LinearLayout>