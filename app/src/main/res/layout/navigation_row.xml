<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/navigationRowImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/keyLine1"
        android:layout_marginRight="@dimen/keyLine1"
        android:layout_marginStart="@dimen/keyLine1"
        android:src="@drawable/ic_ab_nav" />

    <TextView
        android:id="@+id/navigationRowText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/keyLine2"
        android:layout_marginLeft="@dimen/keyLine2"
        android:text="Tutorials" />

</RelativeLayout>